<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h1>
      <%- include('partials/messages.ejs')%>
      <form action="/user/register" method="POST">
        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <label for="first_name">First Name</label>
              <input
                type="name"
                id="first_name"
                name="first_name"
                class="form-control"
                placeholder="First Name"
                value="<%= typeof first_name != 'undefined' ? first_name : '' %>"
              />
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="last_name">Last Name</label>
              <input
                type="name"
                id="last_name"
                name="last_name"
                class="form-control"
                placeholder="Last Name"
                value="<%= typeof last_name != 'undefined' ? last_name : '' %>"
              />
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="budget">Total Monthly Budget</label>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">$</div>
            </div>
            <input 
              type="number"
              id="monthly_budget"
              name="monthly_budget"
              class="form-control"
              placeholder="0"
              value="<%= typeof monthly_budget != 'undefined' ? monthly_budget : '' %>"
              />
          </div>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4 text-center">Have An Account? <a href="/user/login">Login</a></p>
    </div>
  </div>
</div>